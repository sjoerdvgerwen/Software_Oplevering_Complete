@model Warehouse.Webapp.Models.ProductViewModel

@{
    ViewData["Title"] = "ProductList";
}

<form asp-controller="Product" asp-action="AddProduct">
    <div class="form-group">
        <label class="font-size-h6 font-weight-bolder text-dark">Product Name</label>
        <input asp-for="ProductName" tabindex="1" class="form-control form-control-solid h-auto py-6 px-6 rounded-lg" type="text" />
    </div>
    <div class="form-group">
        <label class="font-size-h6 font-weight-bolder text-dark">Product Description</label>
        <input asp-for="ProductDescription" tabindex="1" class="form-control form-control-solid h-auto py-6 px-6 rounded-lg" type="text" />
    </div>

    <div class="pb-lg-0 pb-5">
        <button tabindex="1" type="submit" id="kt_shift_submit" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">Create Product</button>
    </div>
</form>


