@model Warehouse.Webapp.Models.UserViewModel

@{
    ViewData["Title"] = "Register";
}

<form asp-controller="User" asp-action="AddUser">
    <div class="form-group">
        <label class="font-size-h6 font-weight-bolder text-dark">Username</label>
        <input asp-for="UserName" tabindex="1" class="form-control form-control-solid h-auto py-6 px-6 rounded-lg" type="text" />
    </div>
    <div class="form-group">
        <label class="font-size-h6 font-weight-bolder text-dark">Password</label>
        <input asp-for="Password" tabindex="1" class="form-control form-control-solid h-auto py-6 px-6 rounded-lg" type="text" />
    </div>

    <div class="pb-lg-0 pb-5">
        <button tabindex="1" type="submit" id="kt_shift_submit" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">Register employee</button>
    </div>
</form>